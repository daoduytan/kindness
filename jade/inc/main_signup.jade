main.main.login-signup
    .login-signup-box
        ul.link-tabs
            li.active: a(href="#signup") Sign up
            li: a(href="#login") Login

        .tab_content 
            .tab-pane#signup

                .at-form 
                    h1.title-auth Create an Account
                    p.subtitle-auth Signing in allows you to have private list
                    
                    .at-pwd-form 
                        form(role="form",  id="at-pwd-form", novalidate="", action="#", method="POST")
                            .input 
                                <input type="email" id="at-field-email" name="at-field-email" placeholder="Email" autocapitalize="none" autocorrect="off" autocomplete="off" style="background-image: url(&quot;data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR4nGP6zwAAAgcBApocMXEAAAAASUVORK5CYII=&quot;); cursor: auto;">
                            .input 
                                <input type="password" id="at-field-password" name="at-field-password" placeholder="Password" autocapitalize="none" autocorrect="off" autocomplete="off" style="background-image: url(&quot;data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR4nGP6zwAAAgcBApocMXEAAAAASUVORK5CYII=&quot;); cursor: auto;">
                            .input
                                <input type="password" id="at-field-password_again" name="at-field-password_again" placeholder="Password (again)" autocapitalize="none" autocorrect="off" style="background-image: url(&quot;data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR4nGP6zwAAAgcBApocMXEAAAAASUVORK5CYII=&quot;); cursor: auto;">
                            .input
                                <input type="text" id="at-field-name" name="at-field-name" placeholder="Name" autocapitalize="none" autocorrect="off">

                            <button type="submit" class="block full-width m-b" id="at-btn">Register</button>

                .at-signin-link
                    p 
                        | If you already have an account
                        <a href="/signin" id="at-signIn" class="at-link at-signin">sign in</a>

             




    

        